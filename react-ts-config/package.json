{
   "scripts": {
      "format": "prettier .. --write src",
      "lint": "eslint . --ext .jsx,.js,.tsx,.ts  --no-error-on-unmatched-pattern --fix && stylelint --fix src/{,*/}*.{scss,css} --allow-empty-input"
   },

   "lint-staged": {
      "*.{js,ts,tsx,html,vue}": "eslint . --ext .jsx,.js,.tsx,.ts  --no-error-on-unmatched-pattern --fix",
      "*.{js,ts,jsx,tsx,vue,astro,cjs,mjs,css,scss,html,json, vue}": "prettier --write",
      "*.{css,scss}": "stylelint --fix --allow-empty-input"
   },
   "devDependencies": {
      "eslint": "^8.54.0",
      "eslint-plugin-prettier": "^5.0.1",
      "eslint-config-airbnb-base": "^15.0.0",
      "eslint-config-prettier": "^9.0.0",
      "eslint-import-resolver-alias": "^1.1.2",
      "eslint-plugin-import": "^2.29.0",
      "eslint-plugin-react": "^7.33.2",
      "@typescript-eslint/eslint-plugin": "^6.0.0",
      "@typescript-eslint/parser": "^6.0.0",
      "eslint-config-airbnb-typescript": "^17.1.0",
      "stylelint": "^15.11.0",
      "stylelint-config-clean-order": "^5.2.0",
      "stylelint-config-standard-scss": "^11.1.0",
      "stylelint-config-prettier-scss": "^1.0.0",
      "husky": "^8.0.3",
      "lint-staged": "^15.1.0",
      "prettier": "^3.1.0"
   }
}
